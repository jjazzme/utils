{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "es2022",
        "strict": true,
        "rootDir": ".",
        "declaration": true,
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": false,
        "pretty": false,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./example"
    ]
}